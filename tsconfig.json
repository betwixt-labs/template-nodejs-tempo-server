{
	"compilerOptions": {
		"noEmit": true,
		"module": "commonjs",
		"target": "es2020",
		"lib": ["es2020"],
		"strict": true,
		"alwaysStrict": true,
		"preserveConstEnums": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"types": ["@types/node"],
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist", "test"]
}